<section class="header clearfix">
  <h1 class="pull-left">{{t (if editing 'catalogSettings.more.editHeader' 'catalogSettings.more.addHeader')}}</h1>
</section>

<label class="acc-label pb-5">{{t 'catalogSettings.more.name.label'}}</label>
{{input type="text" value=primaryResource.name classNames="form-control" placeholder=(t 'catalogSettings.more.name.placeholder') disabled=editing}}

<label class="pt-20 pb-5">{{t 'catalogSettings.more.kind.label'}}</label>
{{new-select
    classNames="form-control"
    content=kindChoices
    optionValuePath="value"
    optionLabelPath="translationKey"
    value=primaryResource.kind
    localizedLabel=true
    disabled=true
}}
<p class="help-block">{{t 'catalogSettings.helpText'}}</p>

<label class="acc-label pb-5">{{t 'catalogSettings.more.url.label'}}</label>
{{input type="text" value=primaryResource.url classNames="form-control" placeholder=(t 'catalogSettings.more.url.placeholder')}}

<label class="acc-label pb-5">{{t 'catalogSettings.more.branch.label'}}</label>
{{input type="text" value=primaryResource.branch classNames="form-control" placeholder=(t 'catalogSettings.more.branch.placeholder')}}

{{top-errors errors=errors}}
{{save-cancel editing=editing save="save" cancel="cancel"}}
