<section class="header clearfix">
  <div class="pull-left">
    <h1>{{t 'accountsPage.detail.header'}}</h1>
  </div>
  <div class="right-buttons">
    <button {{action "edit"}} type="button" class="btn bg-primary">{{t 'generic.edit'}}</button>
  </div>
</section>

<section class="horizontal-form container-fluid">
  <div class="row">
    <div class="col span-3 col-inline">
      <label>{{t 'accountsPage.new.form.username.labelText'}}:</label>
    </div>
    <div class="col span-7 col-inline">
      {{model.user.userName}}
    </div>
  </div>

  <div class="row">
    <div class="col span-3 col-inline">
      <label>{{t 'accountsPage.new.form.name.labelText'}}:</label>
    </div>
    <div class="col span-7">
      {{model.user.name}}
    </div>
  </div>

  <div class="row">
    <div class="col span-3 col-inline">
      <label>{{t 'accountsPage.detail.table.global.title'}}:</label>
    </div>
    <div class="col span-6 col-inline comma-list">
      {{#each myGlobalRoles as |role index|}}
        {{#if role.active}}
          <span>{{role.name}}</span>
        {{/if}}
      {{/each}}
    </div>
  </div>

  {{#if model.user.description.length}}
    <div class="row">
      <div class="col span-3 col-inline">
        <label for="description">{{t 'accountsPage.new.form.description.labelText'}}</label>
      </div>
      <div class="col span-7 col-inline">
        {{model.user.description}}
      </div>
    </div>
  {{/if}}


  <hr class="mt-20 mb-20" />

  {{#accordion-list
       showExpandAll=false
       as |al expandFn|
  }}

    {{#accordion-list-item
         title=(t 'accountsPage.detail.table.project.title')
         detail=(t 'accountsPage.detail.table.project.description')
         expandOnInit=true
         expandAll=false
         expand=(action expandFn)
    }}
      {{#sortable-table
           classNames="grid sortable-table"
           body=projectRoles
           search=false
           sortBy=sortBy
           bulkActions=false
           fullRows=true
           pagingLabel="pagination.node"
           headers=projectHeaders as |sortable kind role dt|}}
        {{#if (eq kind "row")}}
          <tr class="main-row">
            <td data-title="{{dt.name}}" class="state">
              {{role.name}}
            </td>

            <td data-title="{{dt.project.name}}">
              <a href="#" {{action 'launchOnCluster' role.project }}>{{role.project.name}}</a>
            </td>
          </tr>

        {{else if (eq kind "norows")}}
          <tr><td colspan="{{sortable.fullColspan}}" class="text-center text-muted pt-20 pb-20">{{t 'nodesPage.table.noData'}}</td></tr>
        {{/if}}
      {{/sortable-table}}
    {{/accordion-list-item}}

    {{#accordion-list-item
         title=(t 'accountsPage.detail.table.project.title')
         detail=(t 'accountsPage.detail.table.project.description')
         expandOnInit=true
         expandAll=false
         expand=(action expandFn)
    }}
      {{#sortable-table
           classNames="grid sortable-table"
           body=clusterRoles
           search=false
           sortBy=sortBy
           bulkActions=false
           fullRows=true
           pagingLabel="pagination.node"
           headers=clusterHeaders as |sortable kind role dt|}}
        {{#if (eq kind "row")}}
          <tr class="main-row">
            <td data-title="{{dt.name}}" class="state">
              {{role.name}}
            </td>

            <td data-title="{{dt.project.name}}">
              {{#link-to-external 'authenticated.cluster.projects' role.cluster.id}}
                {{role.cluster.name}}
              {{/link-to-external}}
            </td>
          </tr>

        {{else if (eq kind "norows")}}
          <tr><td colspan="{{sortable.fullColspan}}" class="text-center text-muted pt-20 pb-20">{{t 'nodesPage.table.noData'}}</td></tr>
        {{/if}}
      {{/sortable-table}}
    {{/accordion-list-item}}

  {{/accordion-list}}


</section>
{{top-errors errors=errors}}