<div class="header">
  <h2>{{t 'modalEditPassword.title'}}</h2>
  <p class="help-text">{{t 'modalEditPassword.help'}}</p>
</div>
<section class="horizontal-form container-fluid">
  <div class="modal-content">
    <div class="row">
      <div class="col span-6">
        <label class="acc-label">{{t 'modalEditPassword.new'}}</label>
        {{input type="password" value=password classNames="form-control"}}
      </div>
      <div class="col span-6">
        <label class="acc-label">{{t 'modalEditPassword.confirm'}}</label>
        {{input type="password" value=confirm classNames="form-control"}}
      </div>
    </div>
  </div>
  <div class="footer-actions">
    {{save-cancel saveDisabled=canSave save="save" cancelDisabled=true createLabel='generic.save'}}
  </div>
</section>