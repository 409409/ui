<td class="pr-20">
  {{t 'projectsPage.new.form.members.user'}}
</td>
<td class="pr-10">
  {{#if owner}}
    {{owner.displayName}}
  {{else if member.toAdd}}
    {{searchable-select content=userList value=member.role.subjectName}}
  {{else}}
    {{member.role.user.displayName}}
  {{/if}}
</td>
<td class="pr-10">
  {{#if owner}}
    {{if (eq type 'project') 'Project Owner' 'Cluster Owner'}}
  {{else if showMxRoleLabel}}
    {{t 'projectsPage.new.form.members.multipleRoles'}}
    <span class="edit btn-sm hand" {{action "showCustomRoles" member}}><i class="icon icon-users"></i></span>
  {{else}}
    {{#if member.toAdd}}
      {{searchable-select content=choices value=member.role.roleTemplateId}}
    {{else}}
      {{member.role.roleTemplateId}}
    {{/if}}
  {{/if}}
</td>
<td>&nbsp;</td>
<div class="input-group-btn">
  {{#unless  owner}}
    <button class="btn bg-primary btn-sm" {{action "remove"}}>
      <i class="icon icon-minus" />
    </button>
  {{/unless}}
</div>
