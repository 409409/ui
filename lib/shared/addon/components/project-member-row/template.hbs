<td class="pr-20">
  {{t 'projectsPage.new.form.members.user'}}
</td>
<td class="pr-10">
  {{#if owner}}
    {{owner.displayName}}
  {{else}}
    {{searchable-select content=userList value=member.memberId}}
  {{/if}}
</td>
<td class="pr-10">
  {{#if owner}}
    {{if (eq type 'project') 'Project Owner' 'Cluster Owner'}}
  {{else if member.isCustom}}
    Custom Roles <span class="edit btn-sm hand" {{action "showEdit" member}}><i class="icon icon-edit"></i></span>
  {{else}}
    {{searchable-select content=choices value=roleTemplateId}}
  {{/if}}
</td>
<td>&nbsp;</td>
<div class="input-group-btn">
  {{#unless  owner}}
    <button class="btn bg-primary btn-sm" {{action remove member}}>
      <i class="icon icon-minus" />
    </button>
  {{/unless}}
</div>
