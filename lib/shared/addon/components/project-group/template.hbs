<tr class="group-row">
  <td colspan=3 class="pl-10">
    {{#if model}}
      <a href="{{href-to 'authenticated.cluster.ns.index' model.clusterId}}">{{t 'projectGroup.label' name=model.name}}</a>
      {{#each model.tags as |tag|}}
        <span class="tag-xs bg-info"><i class="icon icon-tag"></i> {{tag}}</span>
      {{/each}}
    {{else}}
      {{t noGroup}}
    {{/if}}
  </td>
  <td data-title="{{dt.actions}}" class="actions text-right" colspan="2">
    {{#if model}}
      {{#link-to "authenticated.cluster.ns.new" (query-params addTo=(or model.id null)) class="btn bg-primary btn-sm" disabled=(rbac-prevents resource="namespace" scope="cluster" permission="create")}}
        {{t 'namespacesPage.addNamespace'}}
      {{/link-to}}
      {{action-menu model=model classNames="inline-block mr-5"}}
    {{else}}
      {{#link-to "authenticated.cluster.ns.new" (query-params addTo=(or model.id null)) class="btn bg-primary btn-sm mr-30" disabled=(rbac-prevents resource="namespace" scope="cluster" permission="create")}}
        {{t 'namespacesPage.addNamespace'}}
      {{/link-to}}
    {{/if}}
  </td>
  {{#if showActions}}
  {{/if}}
</tr>
{{#if noNamespace}}
  <tr class="main-row">
    <td colspan="{{fullColspan}}" class="text-center p-20">
      <div>{{t 'projectGroup.noNS'}}</div>
      {{#link-to "authenticated.cluster.ns.new" (query-params addTo=model.id) class="btn bg-primary btn-sm ml-10" disabled=(rbac-prevents resource="namespace" scope="cluster" permission="create")}}
        {{t 'namespacesPage.addNamespace'}}
      {{/link-to}}
    </td>
  </tr>
{{/if}}
{{#if model.showTransitioningMessage}}
  <tr class="group-row group-row-error">
    <td colspan="{{fullColspan}}" class="text-small {{model.stateColor}}">
      {{uc-first model.transitioningMessage}}
    </td>
  </tr>
{{/if}}