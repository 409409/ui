<h2 class='mb-10'>
  <i class="icon icon-terminal"></i> {{t 'modalShell.title' instanceName=displayName}}
  <div class="console-status text-muted pull-right">{{t (concat 'containerShell.status.' status) error=error}}</div>
</h2>
{{#if showProtip}}
  <div class="protip">
    {{t 'containerShell.protip' key=alternateLabel}}
  </div>
{{/if}}
<div class="shell-container">
  <div class="shell-body" contenteditable="{{contenteditable}}" oncontextmenu={{action "contextMenuHandler"}}>
  </div>
</div>
{{#if hasBlock}}
  <div class="footer-actions">
    {{yield}}
  </div>
{{/if}}
