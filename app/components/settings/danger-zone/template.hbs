<p>{{t 'dangerZone.subtext' appName=settings.appName htmlSafe=true}}</p>

{{#if loading}}
  <div class="p-20 text-center"><i class="icon icon-spinner icon-spin"></i> {{t 'generic.loading'}}</div>
{{else}}
  <div>
    {{#each current as |row|}}
      <div class="advanced-setting">
        <div class="edit btn bg-warning" {{action "showEdit" row.key}}><i class="icon icon-edit"></i></div>
        <div class="text-mono force-wrap {{unless (or (not row.obj) row.obj.isDefault) 'text-bold'}}">{{row.key}}={{#if row.obj.value}}{{row.obj.value}}{{else}}<span class="text-muted">&lt;none&gt;</span>{{/if}}</div>
        <p class="text-info">{{t row.descriptionKey}}</p>
      </div>
    {{/each}}
  </div>
{{/if}}
